<% layout('layouts/boilerplate') %>

<div class="row justify-content-center">
	<h1 class="text-center"> Edit Campground </h1>
	<div class="col-12 col-md-8">
		<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
			<div class="mb-2">
				<label class="form-label" for="title">Title</label>
				<input class="form-control" type="text" id="title" value="<%= campground.title %>" name="campground[title]">
			</div>
		
			<div class="mb-2">
				<label class="form-label" for="location">Location</label>
				<input class="form-control" type="text" id="location" value="<%= campground.location %>" name="campground[location]">
			</div>
	
			<div class="mb-2">
				<label class="form-label" for="image">Image Url</label>
				<input class="form-control" type="text" id="image" value="<%=campground.image %>" name="campground[image]">
			</div>
	
			<div class="mb-3">
				<label class="form-label" for="price">Price</label>
				<div class="input-group">
					<span class="input-group-text" id="price-label">$</span>
					<input type="text" id="price" class="form-control" value="<%= campground.price %>" name="campground[price]" placeholder="0" aria-label="price" aria-describedby="price-label">
				</div>
			</div>
			
	
			<div class="mb-2">
				<label class="form-label" for="description">Description</label>
				<textarea class="form-control" type="text" id="description" name="campground[description]" cols="30" rows="10"> <%= campground.description %> </textarea>
			</div>
		
			<button class="btn btn-info">Update Campground</button>
			<a class="btn btn-dark ml-2" href="/campgrounds/<%=campground._id%>">Back</a>
		</form>
	</div>
	
	
</div>
